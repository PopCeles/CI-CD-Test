pipeline {
    agent any
    stages {
        stage("Step 1"){
            steps {
                echo 'Step 1 Success'
            }
        }
        stage("Step 2"){
            steps {
                writeFile file: 'groovy1.txt', text: 'Working with files the Groovy way is easy.'
                sh 'ls -l groovy1.txt'
                sh 'cat groovy1.txt'
                sh 'cat hello.py'
            }
        }
    }
}